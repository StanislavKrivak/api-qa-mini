		{
			"name": "Get Booking Detail",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status is 200\", function () {",
							"  pm.response.to.have.status(200);",
							"});",
							"",
							"const b = pm.response.json();",
							"",
							"pm.test(\"Required fields exist\", function () {",
							"  pm.expect(b).to.have.property(\"firstname\");",
							"  pm.expect(b).to.have.property(\"lastname\");",
							"  pm.expect(b).to.have.property(\"totalprice\");",
							"  pm.expect(b).to.have.property(\"depositpaid\");",
							"  pm.expect(b).to.have.property(\"bookingdates\");",
							"});",
							"",
							"pm.test(\"Data match created booking\", function () {",
							"  pm.expect(b.firstname).to.eql(\"Stanislav\");",
							"  pm.expect(b.lastname).to.eql(\"Krivak\");",
							"  pm.expect(b.totalprice).to.eql(123);",
							"  pm.expect(b.depositpaid).to.eql(true);",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
